{
    "plugins": [
        "jsdoc"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:jsdoc/recommended",
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
    },
    "rules": {
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "jsdoc/no-undefined-types": "warn",
        "jsdoc/require-param-description": "off",
        "jsdoc/require-returns-description": "off",
        "jsdoc/require-returns-type": "off",
        "jsdoc/require-jsdoc": "off",
        "no-unused-vars": [
            "warn",
            {
                "args": "none",
                "ignoreRestSiblings": false
            }
        ],
        "no-redeclare": "off",
        "no-var": "error",
        "prefer-const": "error"
    }
}